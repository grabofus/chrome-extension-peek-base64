{
    "name": "Peek Base64",
    "version": "1.0",
    "description": "A tool that allows you to peek the values of base64 strings.",
    "manifest_version": 2,
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "512": "images/logo_512.png"
        }
    },
    "icons": {
        "512": "images/logo_512.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "script.js"
        ]
    }
}